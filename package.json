{
  "name": "protopipe",
  "version": "1.0.1",
  "description": "Graph-based data processor",
  "main": "lib/es5/index.js",
  "files": [
    "README.md",
    "CHANGELOG.md",
    "lib",
    "typings"
  ],
  "scripts": {
    "jest": "jest -w 2 --config=jest.config.json",
    "lint": "tslint -p tsconfig.json src/**/*.ts --fix",
    "test": "yarn lint && yarn jest",
    "clean": "rm -rf lib typings",
    "build": "yarn clean && yarn build_es5 && yarn build_es6 && yarn build_ts && yarn libdef && yarn docs",
    "build_es5": "mkdir -p lib/es5 && tsc -p tsconfig.build.json --target ES5 --outDir lib/es5",
    "build_es6": "mkdir -p lib/es6 && tsc -p tsconfig.build.json --target ES6 --outDir lib/es6",
    "build_ts": "cp -r src/main/ts/ lib/ts/",
    "dtsgen": "dts-generator --project ./ --out typings/index.d.ts --prefix protopipe/lib/es5 --name protopipe --main protopipe/lib/es5/index --moduleResolution node",
    "flowgen": "flowgen typings/index.d.ts --output-file typings/index.flow.js",
    "libdef": "yarn dtsgen && yarn libdeffix && yarn flowgen",
    "libdeffix": "node -r esm ./src/gen/js/libdef-fix.js --dts=./typings/index.d.ts",
    "test_with_report": "yarn test && yarn coveralls_push",
    "coveralls_push": "cat ./coverage/lcov.info | coveralls",
    "docs": "typedoc --readme README.md --tsconfig tsconfig.build.json src/main --ignoreCompilerErrors || exit 0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/qiwi/protopipe.git"
  },
  "keywords": [
    "protopipe",
    "lambda"
  ],
  "author": "Anton Golub <mailbox@antongolub.ru>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/qiwi/protopipe/issues"
  },
  "homepage": "https://github.com/qiwi/protopipe#readme",
  "dependencies": {
    "tslib": "^1.9.3"
  },
  "devDependencies": {
    "@qiwi/semantic-release-gh-pages-plugin": "^1.6.2",
    "@qiwi/substrate": "^1.9.1",
    "@semantic-release/changelog": "^3.0.2",
    "@semantic-release/git": "^7.0.8",
    "@semantic-release/github": "^5.2.10",
    "@semantic-release/npm": "^5.1.4",
    "@types/jest": "^24.0.11",
    "@types/jest-json-schema": "^1.2.1",
    "coveralls": "^3.0.3",
    "dts-generator": "^3.0.0",
    "eslint-plugin-typescript": "^0.14.0",
    "esm": "^3.2.22",
    "flowgen": "1.8.0",
    "jest": "^24.7.1",
    "lodash": "^4.17.11",
    "replace-in-file": "^3.4.4",
    "semantic-release": "^15.13.3",
    "ts-jest": "^24.0.2",
    "tslint": "^5.15.0",
    "tslint-config-qiwi": "^1.0.1",
    "typedoc": "^0.14.2",
    "typedoc-plugin-external-module-name": "^2.0.0",
    "typescript": "^3.4.3",
    "typescript-eslint-parser": "^22.0.0"
  },
  "release": {
    "branch": "master",
    "verifyConditions": [
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/git",
      "@qiwi/semantic-release-gh-pages-plugin"
    ],
    "prepare": [
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/git"
    ],
    "publish": [
      "@semantic-release/npm",
      "@semantic-release/github",
      "@qiwi/semantic-release-gh-pages-plugin"
    ]
  }
}
